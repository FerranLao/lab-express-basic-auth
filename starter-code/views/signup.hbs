{{#if error}}
    <h2>{{error}}</h2>
{{/if}}
<form id="form" action="/signup" method="POST">
    <label for="username">Username</label><br>
    <input type="text" name="username" placeholder="AnakinSkywalker">
    <br><br>
    <label for="password">Password</label><br>
    <input id="myPassword" type="password" name="password" placeholder="DeathStar" required minlength="6">
    <br><br>
    <button>Create account</button>
</form>